# frontend/Dockerfile
FROM python:3.11-slim

# Install Pipenv
RUN pip install pipenv

WORKDIR /app

# Copy Pipfile and Pipfile.lock for dependency caching
COPY Pipfile Pipfile.lock* ./

# Install dependencies in the Pipenv environment
RUN pipenv install --deploy --ignore-pipfile

# Copy the application code
COPY . .

# Run the Streamlit app via Pipenv
CMD ["pipenv", "run", "streamlit", "run", "streamlit_app.py", "--server.port=8501", "--server.address=0.0.0.0"]
